<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F"
    android:paddingHorizontal="32dp"
    android:paddingTop="40dp">


    <ImageView
        android:id="@+id/ivBackImage"
        android:layout_width="34dp"
        android:layout_height="46dp"
        android:layout_marginTop="88dp"
        android:padding="8dp"
        android:src="@drawable/arrow_back_24px"
        app:layout_constraintStart_toStartOf="@+id/ivDetailImage"
        app:layout_constraintTop_toBottomOf="@+id/ivDetailImage"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/ivDetailImage"
        android:layout_width="318dp"
        android:layout_height="316dp"

        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="50dp"
        tools:layout_conversion_absoluteWidth="50dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDetailImage"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:layout_conversion_absoluteWidth="124dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:text="Song Name" />

    <TextView
        android:id="@+id/tvDetailAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailName"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_conversion_absoluteWidth="44dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp"
        tools:text="Autor" />

    <TextView
        android:id="@+id/tvDetailAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailAutor"
        tools:layout_conversion_absoluteHeight="246dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:text="Album" />



    <TextView
        android:id="@+id/tvTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailAlbum"
        tools:layout_conversion_absoluteHeight="246dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:text="Text" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="223dp"
        android:layout_height="270dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailAutor">

        <TextView
            android:id="@+id/tvDetailTText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Text" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>